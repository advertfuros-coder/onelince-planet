              <div className="grid grid-cols-2 gap-4 mb-8">
                <button
                  onClick={handleAddToCart}
                  className="py-4 bg-white border-2 border-blue-600 text-blue-600 font-bold rounded-xl hover:bg-blue-50 transition-all flex items-center justify-center gap-2 shadow-sm"
                >
                  <FiPackage className="w-5 h-5" />
